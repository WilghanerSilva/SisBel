// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cliente {
  id           String         @id @default(uuid())
  nome         String
  email        String         @unique
  perfil       String
  senha        String
  telefone     String
  agendamentos Agendamentos[]
}

model Funcionario {
  id             String         @id @default(uuid())
  nome           String
  email          String         @unique
  perfil         String
  senha          String
  telefone       String
  cpf            String
  endereco       String
  cidade         String
  dataNascimento String
  servicos       Servicos[]
  agendamentos   Agendamentos[]
}

model Admin {
  id     String @id @default(uuid())
  nome   String
  email  String @unique
  perfil String
  senha  String
}

model Agendamentos {
  id            String      @id @default(uuid())
  data          DateTime
  detalhes      String
  horario       String
  funcionario   Funcionario @relation(fields: [funcionarioId], references: [id])
  funcionarioId String
  cliente       Cliente?    @relation(fields: [clienteId], references: [id])
  clienteId     String?
  servico       Servicos    @relation(fields: [servicoId], references: [id])
  servicoId     String
}

model Servicos {
  id           String         @id @default(uuid())
  nome         String         @unique
  publico      String
  categoria    String
  funcionarios Funcionario[]
  agendamentos Agendamentos[]
}
